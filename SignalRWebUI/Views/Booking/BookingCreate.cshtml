@model CreateBookingDto
@{
    ViewData["Title"] = "BookingCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İslemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-action="BookingCreate" asp-controller="Booking">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Formu</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Name">Rezervasyon Adı</label>
								<input type="text" class="form-control" placeholder="Rezervasyon Adı Giriniz..." asp-for="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Phone">Rezervasyon Telefon Numarası</label>
								<input type="text" class="form-control" placeholder="Telefon Numarası Giriniz..." asp-for="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Mail">Rezervasyon Mail Adresi</label>
								<input type="text" class="form-control" placeholder="Mail Adresi Giriniz..." asp-for="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="PersonCount">Rezervasyon Kişi Sayısı</label>
								<input type="text" class="form-control" placeholder="Rezerve Edilecek Sayı Giriniz..." asp-for="PersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" placeholder="Rezerve Edilecek Sayı Giriniz..." asp-for="Date">
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Rezervasyon Ekle</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

