@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil Sayfamı Güncelleme</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Profil Güncelleme Formu</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="UserName">Kullanıcı Adı</label>
								<input type="text" class="form-control" placeholder="Kullanıcı Adı Giriniz..." asp-for="UserName">
							</div>
							<div class="form-group">
								<label asp-for="Name">Adı</label>
								<input type="text" class="form-control" placeholder="Adı Giriniz..." asp-for="Name">
							</div>
							<div class="form-group">
								<label asp-for="SurName">Soyadı</label>
								<input type="text" class="form-control" placeholder="Soyadı Giriniz..." asp-for="SurName">
							</div>
							<div class="form-group">
								<label asp-for="Mail">Mail</label>
								<input type="email" class="form-control" placeholder="Mail Adresi Giriniz..." asp-for="Mail">
							</div>
							<div class="form-group">
								<label asp-for="Password">Şifre</label>
								<input type="password" class="form-control" placeholder="Şifrenizi Giriniz..." asp-for="Password">
							</div>
							<div class="form-group">
								<label asp-for="ConfirmPassword">Şifre Onaylayın</label>
								<input type="password" class="form-control" placeholder="Şifrenizi Giriniz..." asp-for="ConfirmPassword">
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Profili Güncelle Güncelle</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

