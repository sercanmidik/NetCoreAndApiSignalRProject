@model List<ResultOrderDetailWithProduct>
@{
	ViewData["Title"] = "OrderDetailList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
	decimal totalPrice = 0;
	int tableNumber = (ViewBag.tableNumber);
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">@tableNumber.ToString() Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">@tableNumber.ToString() Masanın Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							@tableNumber.ToString() Masanın Ürün İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Adet</th>
									<th scope="col">Toplam</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@if(Model.Count>0)
								{
									@foreach (var item in Model)
									{
										totalPrice += item.TotalPrice;
										count++;
										<tr>
											<td>@count</td>
											<td>@item.ProductName</td>
											<td>@item.UnitPrice</td>
											<td>@item.Count</td>
											<td>@item.TotalPrice</td>
											<td><a href="/OrderDetail/OrderDetailDelete/@item.OrderDetailId" class="btn btn-outline-danger">Sil</a></td>
										</tr>
									}
									
								}
								<tr>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td>@totalPrice.ToString()</td>

								</tr>
							</tbody>
						</table>
						<hr />
						
					</div>
				</div>



			</div>

		</div>
	</div>
</div>

