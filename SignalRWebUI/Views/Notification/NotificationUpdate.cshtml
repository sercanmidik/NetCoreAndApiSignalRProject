@model UpdateNotificationDto
@{
    ViewData["Title"] = "NotificationUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İslemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Formu</div>
						</div>
						<input type="hidden" asp-for="NotificationId" />
						<input type="hidden" asp-for="Status" />
						<input type="hidden" asp-for="Date" />
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Type">Bildirim Türü</label>
								<input type="text" class="form-control" placeholder="Bildirim Adı Giriniz..." asp-for="Type">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Icon">Bildirim Icon</label>
								<input type="text" class="form-control" placeholder="Bildirim Icon Giriniz..." asp-for="Icon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Description">Açıklama</label>
								<input type="text" class="form-control" placeholder="Açıklama Giriniz..." asp-for="Description">
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Bildirim Güncelle</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

