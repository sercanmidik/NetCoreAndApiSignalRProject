@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationId</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a href="/Notification/NotificationDelete/@item.NotificationId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Notification/NotificationUpdate/@item.NotificationId" class="btn btn-outline-succes">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notification/NotificationCreate/" class="btn btn-outline-primary">Yeni Bildirim Girisi</a>
					</div>
				</div>



			</div>

		</div>
	</div>
</div>

