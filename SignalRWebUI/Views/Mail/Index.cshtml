@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mail Sayfamı Güncelleme</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Mail Gönderme Formu</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="ReceiverMail">Alıcı Mail Adresi</label>
								<input type="text" class="form-control" placeholder="Mail Adresi Giriniz..." asp-for="ReceiverMail">
							</div>
							<div class="form-group">
								<label asp-for="Subject">Konu</label>
								<input type="text" class="form-control" placeholder="Konu Giriniz..." asp-for="Subject">
							</div>
							<div class="form-group">
								<label asp-for="Body">Mesajınız</label>
								<textarea type="text" class="form-control" placeholder="Mesaj Giriniz..." asp-for="Body" rows="5"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Mail Gönder</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

