@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirimlerle İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Description</td>
										<td><a href="/Discount/DiscountChange/@item.DiscountId" class="btn btn-outline-danger">@item.Status</a></td>
										<td><a href="/Discount/DiscountDelete/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/DiscountUpdate/@item.DiscountId" class="btn btn-outline-succes">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Feature/FeatureCreate/" class="btn btn-outline-primary">Yeni İndirim Ürün Girisi</a>
					</div>
				</div>



			</div>

		</div>
	</div>
</div>

