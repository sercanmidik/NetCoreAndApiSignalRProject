@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Category Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						Kategori İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.CategoryName</td>
										<td>@item.CategoryStatus</td>
										<td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Category/CategoryUpdate/@item.CategoryId" class="btn btn-outline-succes">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Category/CategoryCreate/" class="btn btn-outline-primary">Yeni Kategori Girisi</a>
					</div>
				</div>



			</div>

		</div>
	</div>
</div>

