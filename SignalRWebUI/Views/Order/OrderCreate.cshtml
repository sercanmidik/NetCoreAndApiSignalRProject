@model CreateOrderDto
@{
    ViewData["Title"] = "OrderCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İslemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Formu</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="TableNumber">Ürün Kategori Giriniz</label>
								@Html.DropDownListFor(x => x.TableNumber, (List<SelectListItem>)ViewBag.menutable, new { @class = "form-control" })
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Hesap Aç</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

