@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
  
    @await Component.InvokeAsync("_UILayoutHeadPartialComponent")

</head>

<body class="sub_page">


    @await Component.InvokeAsync("_MenuNavbarPartialComponent")
 
  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Rezervasyon Sayfası
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
            <form method="post">
              <div>
                <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız" />
              </div>
              <div>
                <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız" />
              </div>
              <div>
                <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz" />
              </div>
              <div>
                <select asp-for="PersonCount" class="form-control nice-select wide" >
                  <option value="0" disabled selected>
                    Kaç Kişiniz ?
                  </option>
                                    <option value="1">
                                        1
                                    </option>
                  <option value="2">
                    2
                  </option>
                  <option value="3">
                    3
                  </option>
                  <option value="4">
                    4
                  </option>
                  <option value="5">
                    5
                  </option>
                </select>
              </div>
              <div>
                <input type="date" class="form-control" asp-for="Date">
              </div>
              <div class="btn_box">
                <button>
                  Yerinizi Ayırtın
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container ">
            <div id="googleMap"></div>
          </div>
        </div>
      </div>
    </div>
  </section>


 
    @await Component.InvokeAsync("_UIFooterPartialComponent")

    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")

</body>

</html>
