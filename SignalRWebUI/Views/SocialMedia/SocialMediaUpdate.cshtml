@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "SocialMediaUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan İslemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Öne Çıkan İşlem Formu</div>
                        </div>
                        <input type="hidden" asp-for="SocialMediaId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title">Başlık</label>
                                <input type="text" class="form-control" placeholder="Başlığı Giriniz..." asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Url">Link Yazın</label>
                                <input type="text" class="form-control" placeholder="Link Giriniz..." asp-for="Url" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Icon">Icon Yolu</label>
                                <input type="text" class="form-control" placeholder="Icon Giriniz..." asp-for="Icon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Sosyal Medyayı Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

