@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Masa Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Masa İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Masa Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.MenuTableId</td>
										<td>@item.Name</td>
										@if(item.Status==true)
										{
											<td style="color:green">@item.Status</td>
										}
										else
										{
											<td style="color:red">@item.Status</td>
										}
										<td><a href="/MenuTable/MenuTableDelete/@item.MenuTableId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/MenuTable/MenuTableUpdate/@item.MenuTableId" class="btn btn-outline-succes">Güncelle</a></td>
									
									</tr>
								}
							</tbody>
						</table>
						<a href="/MenuTable/MenuTableCreate/" class="btn btn-outline-primary">Yeni Masa Girisi</a>
					</div>
				</div>



			</div>

		</div>
	</div>
</div>
